APP_NAME="InventarioSmart"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_DOMAIN=inventariosmart.app
FRONTEND_URL=http://localhost:3000

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Principal (tenants)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=inventariosmart
DB_USERNAME=root
DB_PASSWORD=

# Cache & Sessions
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (Mailgun recomendado para producci√≥n)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@inventariosmart.app"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe (Pagos)
STRIPE_KEY=pk_test_your_key_here
STRIPE_SECRET=sk_test_your_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PROFESSIONAL=price_professional_id
STRIPE_PRICE_BUSINESS=price_business_id

# MercadoPago (Alternativa para LATAM)
MP_PUBLIC_KEY=TEST-your_public_key
MP_ACCESS_TOKEN=TEST-your_access_token

# Sanctum (API Auth)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,inventariosmart.app,.inventariosmart.app

# Feature Flags
ENABLE_TRIAL=true
TRIAL_DAYS=14
ENABLE_REGISTRATION=true
