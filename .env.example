APP_NAME="InventarioSmart"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_DOMAIN=inventariosmart.app
FRONTEND_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=warning

# Database (conexión interna Docker - NO CAMBIAR DB_HOST NI DB_PORT)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=inventario_db
DB_USERNAME=inventario_user
DB_PASSWORD=root
DB_ROOT_PASSWORD=root

# Redis (opcional, mejora performance)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (configurar para producción)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@inventariosmart.app"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe (configurar para pagos)
STRIPE_KEY=pk_test_your_key_here
STRIPE_SECRET=sk_test_your_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PROFESSIONAL=price_professional_id
STRIPE_PRICE_BUSINESS=price_business_id

# Sanctum (dominios permitidos para auth)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8000,127.0.0.1,127.0.0.1:8000,inventariosmart.app,*.inventariosmart.app

# Tenant Configuration
TENANT_DOMAIN_BASE=inventariosmart.app
TENANT_DATABASE_PREFIX=tenant_

# Feature Flags
ENABLE_TRIAL=true
TRIAL_DAYS=14
ENABLE_REGISTRATION=true
